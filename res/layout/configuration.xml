<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    tools:context="fero.taskerplugin.dismissalarm.ConfigurationActivity" >

    <TextView
        android:id="@+id/lblEventAlarmLabel"
        android:layout_gravity="left"
        android:text="@string/configuration_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtEventAlarmLabel"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:ems="10"
        android:hint=""
        android:inputType="text"
        android:minLines="1" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lblAlarmLabelInformation"
        android:layout_height="114dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="4"
        android:gravity="bottom"
        android:text="@string/configuration_label_information" />

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="5" />

    <Space
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3" />

    <Space
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2" />

</GridLayout>